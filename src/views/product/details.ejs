<%- contentFor('style') %>
<link rel="stylesheet" href="/css/product.css" />

<%- contentFor('body') %>
<main class="centered">
    <h1><%= product.title %></h1>
    <hr>
    <div class="image">
        <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
    </div>
    <h2>$<%= product.price %></h2>
    <p><%= product.description %></p>
    <a href="/product/<%= product.id %>/add-to-cart" class="btn">Add to Cart</a>
    <a href="/" class="btn">Go Back</a>
</main>